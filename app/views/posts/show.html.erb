<h1><%= @post.name %></h1>
<p>Year:<%= @post.year%></p>
<p>Body:<%= @post.body%></p>
<p>Size:<%= @post.size%></p>


<h3>Comments</h3>
<% if @post.comments.length > 0 %>
<% @post.comments.each do |comment| %>

<p class="comment-area">
  <%= comment.body %>
</p><br>
<% end %>
<% else %>
<h4>No comments have been posted yet.</h4>
<% end %>


<hr>
<h3>Add a comment:</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>

<div class="field">
  <%= f.label :body %><br />
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
